<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="checkout_cart_add_product_complete">
        <observer name="observerCartAdd" instance="Oct8ne\Oct8ne\Observer\CartObserver" />
    </event>

    <event name="checkout_cart_save_after">
        <observer name="observerCartSave" instance="Oct8ne\Oct8ne\Observer\CartObserver" />
    </event>

    <event name="checkout_onepage_controller_success_action">
        <observer name="observerCheckoutSuccess" instance="Oct8ne\Oct8ne\Observer\CartObserver" />
    </event>

</config>